<%- include('partials/_header') %>

    <!-- Dropzone css -->
    <link href="/plugins/dropzone/dist/dropzone.css" rel="stylesheet" type="text/css">
    <link href="/plugins/dropify/css/dropify.min.css" rel="stylesheet">
    </head>

    <body>

        <!-- Navigation Bar-->
        <%- include('partials/_navigation')%>

        <% if(user && ('role' in user)){ %>

            <%if(user.role=='super' || user.role=='editor'){%>

                <div class="wrapper">
                    <div class="container-fluid">
        
                        <!-- Page-Title -->
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="page-title-box">
                                    <div class="btn-group pull-right">
                                        <ol class="breadcrumb hide-phone p-0 m-0">
                                            <li class="breadcrumb-item"><a href="#">Panel</a></li>
                                            <li class="breadcrumb-item"><a href="#">İlaçlar</a></li>
                                            <li class="breadcrumb-item active">İlaç Ekle</li>
                                        </ol>
                                    </div>
                                    <h4 class="page-title">İlaç Ekle </h4>
                                </div>
                            </div>
                        </div>
                        <!-- end page title end breadcrumb -->
                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-body">
        
                                        <h4 class="mt-0 header-title">İlaç Ekle</h4>
        
                                        <form method="post" action="/ilaclar/ilac-ekle" encType="multipart/form-data">
        
                                            <div class="row">
                                                <div class="col-md-4">
                                                    
                                                    <div class="p-20">
                                                        <div class="col-sm-12">
                                                            <div class="col-md-12">
                                                            
                                                                <div class="card-body"> 
                                                                    <p class="text-muted  font-14">İlaç resmini yükleyin.</p>
                                                                    <input name="image" type="file" id="input-file-now-custom-3" class="dropify" data-height="335" required />
                                                                </div>
                                                            </div>
                                                        
                                                            
                                                        </div>  
                                                    </div>
                                                </div> <!-- end col -->
        
                                                <div class="col-md-8">
                                                    <div class="p-20">
                                                        <h4 class="mt-0 header-title">İlaç Bilgileri</h4>
                                                        <p class="text-muted mb-4 font-14">Lütfen ilaç bilgilerini eksiksiz doldurunuz.</p>
                                                        
                                                            <div class="form-group mb-0">
                                                                <label class="my-2 py-1">İlaç Adı</label>
                                                                <div>
                                                                    <input type="text" name="name" class="form-control" required
                                                                            placeholder="İlaç adı giriniz"/>
                                                                </div>
                                                            </div>
        
                                                            <div class="form-group mb-0">
                                                                <label class="my-2 py-1">İlaç Fiyatı</label>
                                                                <div>
                                                                    <input type="number" step="any" name="price" class="form-control" required
                                                                            placeholder="İlaç fiyatı giriniz"/>
                                                                </div>
                                                            </div>
                        
                                                            <div class="form-group mb-0">
                                                                <label class="my-2 py-1">İlaç Türü</label>
                                                                <div>
                                                                    <input type="text" name="medicineType" class="form-control" required
                                                                            placeholder="Hap/Şurup/Sprey Cinsinden"/>
                                                                </div>
                                                            </div>
                                                            <div class="form-group mb-5">
                                                                <label class="my-2 py-1">Açıklama</label>
                                                                <div>
                                                                    <input placeholder="Tablet sayısı/Ml durumu" type="text" name="description" class="form-control" required/>
                                                                </div>
                                                            </div>
                                                            
                                                            <div class="form-group mb-0">
                                                                <div>
                                                                    <button type="submit" class="btn btn-primary waves-effect waves-light">
                                                                        Gönder
                                                                    </button>
                                                                    <button type="reset" class="btn btn-secondary waves-effect m-l-5">
                                                                        İptal
                                                                    </button>
                                                                </div>
                                                            </div>
                                        
                                                
                                                </div>
                                                </div> <!-- end col -->
                                        
                                            </div> <!-- end row -->
                                        </form>
        
                                    </div>
                                </div>
                            </div> <!-- end col -->
                        </div> <!-- end row -->                            
                    </div> <!-- end container -->
                </div>

            <%}else{%>
                <div class="wrapper">
                    <div class="container-fluid pt-5 pb-5">
                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="offset-1 col-md-10">
                                                <div class="p-20">
                                                    <div class="ex-page-content text-center">
                                                        <h1 class="">404!</h1>
                                                        <h3 class="">Bu alana erişim yetkiniz yok</h3><br>
                                
                                                        <a class="btn btn-danger mb-5 waves-effect waves-light" href="/">Panele Dönmek için Tıklayın</a>
                                                        
                                                        <div id="uyari"></div>   
                                                    </div>
                                                </div>
                                            </div> <!-- end col -->
                                            
                                        </div> <!-- end row --> 
                                    </div>
                                </div>
                            </div> <!-- end col -->
                        </div> <!-- end row -->   
                    </div>
                </div>
            <%}%>
        <%}%>


   <!-- Footer -->
   <%- include('partials/_footer')%>
   <!-- End Footer -->
 
    <!-- Dropzone js -->
    <script src="/plugins/dropzone/dist/dropzone.js"></script>
    <script src="/plugins/dropify/js/dropify.min.js"></script>
    <script src="/pages/upload.init.js"></script>

    <!-- Plugins Init js -->
    <script src="/pages/form-advanced.js"></script> 

    <script>
        function Yonlendir(ID, adres, saniye) {
            if (saniye == 0) {
                window.location.href = adres;
            return;
            }
            document.getElementById(ID).innerHTML = saniye + " saniye sonra yönlendiriliyorsunuz.";
            saniye--;
            setTimeout(function() {
                Yonlendir(ID, adres, saniye);
            }, 1000);
        }
    </script>
    <script>
        Yonlendir("uyari", "/", 10);
    </script>
    

    </body>
</html>







