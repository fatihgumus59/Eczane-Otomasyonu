<%- include('partials/_header') %>

    <style>
        .medicine{
            width: 100%;
            height: 470px;
            overflow: auto;
        }
    </style>
    </head>

    <body>

        <!-- Navigation Bar-->
        <%- include('partials/_navigation')%>


        <div class="wrapper">
            <div class="container-fluid">

                <!-- Page-Title -->
                <div class="row">
                    <div class="col-sm-12">
                        <div class="page-title-box">
                            <div class="btn-group pull-right">
                                <ol class="breadcrumb hide-phone p-0 m-0">
                                    <li class="breadcrumb-item"><a href="#">Panel</a></li>
                                    <li class="breadcrumb-item"><a href="#">Sayfalar</a></li>
                                    <li class="breadcrumb-item active">Borç Düzenle</li>
                                </ol>
                            </div>
                            <h4 class="page-title">Borç Düzenle </h4>
                        </div>
                    </div>
                </div>
                <!-- end page title end breadcrumb -->
              
                <%if(debt){%>
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="mt-0 header-title">Borç Düzenle</h4>
                                    <form method="post" action="/kisiler/<%= debt._id %>?_method=PUT">
                                        <div class="row">
                                            <div class="col-md-4">
                                            
                                                <div class="p-20">
                                                    <div class="col-sm-12">
                                                        <div class="col-md-10">
                                                            <h4 class="mt-4 header-title">İLAÇ</h4>
                                                            <p class="text-muted  font-14">İlaç adını aşağıdan seçiniz, aradığınız ilaç sistemde yoksa ilaç ekle butonuna tıklayarak ilacı ekleyiniz.</p>
                                                            
                                                            
                                                            <div class="medicine">
                                                                <h5>Seçili</h5>
                                                                <% for(let i=0; i< debt.medicine.length; i++) { %>
                                                                    <input type="checkbox" id="<%= medicine[i]._id%>" name="medicine"  checked value="<%= debt.medicine[i]._id %>">
                                                                    <label for="<%= medicine[i]._id%>"><%= JSON.stringify(debt[i].medicine[i].ilac.name) %> - Seçili</label><br>
                                                                <% } %>
                                                                <hr>
                                                                <% for(let i=0; i< medicine.length; i++) { %>
                                                                    <input type="checkbox" id="<%= medicine[i].name%>" name="medicine"  value="<%= medicine[i]._id %>">
                                                                    <label for="<%= medicine[i].name%>"><%= medicine[i].name%></label><br>
                                                                
                                                                <% } %>
                                                        
                                                            </div>
                                                            

                                                            <a class="btn btn-primary waves-effect waves-light mt-4 mb-4" href="/ilaclar/ilac-ekle" role="button">İlaç Ekle</a>
                                                        </div>
                                                        
                                                    </div>  
                                                </div>
                                            </div> <!-- end col -->

                                            <div class="col-md-8">
                                                <div class="p-20">

                                                    <div class="btn-group pull-right">
                                                        <a target="_blank" href="/yazdir/<%= debt._id%>">
                                                            <button type="button" class="btn btn-primary"><i class="mdi mdi-printer"></i> Yazdır</button>
                                                        </a>
                                                    </div>

                                                    <h4 class="mt-0 header-title">Kişi Bilgileri</h4>
                                                    <p class="text-muted mb-4 font-14">Lütfen kişi bilgilerini eksiksiz doldurunuz.</p>

                                                        <div class="form-group mb-3">
                                                            <label>Borç Durumu</label>
                                                            <select name="status" class="form-control">
                                                                <option value="<%= debt.status%>"><%= debt.status%> - Seçili</option>
                                                                <option value="Ödendi">Ödendi</option>
                                                                <option value="Ödenmedi">Ödenmedi</option>
                                                            </select>
                                                        </div>

                                                        <div class="form-group mb-0">
                                                            <label>T.C Kimlik No</label>
                                                            <input type="text" name="tc" value="<%= debt.tc%>" data-mask="99999999999"  class="form-control">
                                                        </div>
                    
                                                        <div class="form-group mb-0">
                                                            <label class="my-2 py-1">İsim Soyisim</label>
                                                            <div>
                                                                <input type="text" value="<%= debt.name %>" name="name" class="form-control" />
                                                            </div>
                                                        </div>
                    
                                                        <div class="form-group mb-0">
                                                            <label class="my-2 py-1">Borç</label>
                                                            <div>
                                                                <input autofocus type="number" step="any" value="<%= debt.total %>"  name="total" class="form-control" />
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <label class="my-2 py-1">Not</label>
                                                            <div>
                                                                <textarea id="textarea" name="note" value="<%= debt.note %>" class="form-control" maxlength="225" rows="3"><%= debt.note %></textarea>
                                                            </div>
                                                        </div>
                                                        <div class="form-group mt-5 mb-0">
                                                            <div>
                                                                <button type="submit" class="btn btn-primary waves-effect waves-light">
                                                                    Gönder
                                                                </button>
                                                                <button type="reset" class="btn btn-secondary waves-effect m-l-5">
                                                                    İptal
                                                                </button>
                                                            </div>
                                                        </div>
                                                
                                                </div>
                                            </div> <!-- end col -->
                                            
                                        </div> <!-- end row -->
                                    </form>
                                </div>
                            </div>
                        </div> <!-- end col -->
                    </div> <!-- end row -->  
                <%}else{%>      
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="offset-1 col-md-10">
                                            <div class="p-20">
                                                <div class="ex-page-content text-center">
                                                    <h1 class="">404!</h1>
                                                    <h3 class="">Kişi Silinmiş</h3><br>
                            
                                                    <a class="btn btn-danger mb-5 waves-effect waves-light" href="/">Panele Dönmek için Tıklayın</a>
                                                    
                                                    <div id="uyari"></div>   
                                                </div>
                                            </div>
                                        </div> <!-- end col -->
                                        
                                    </div> <!-- end row --> 
                                </div>
                            </div>
                        </div> <!-- end col -->
                    </div> <!-- end row -->   
                    
                <%}%>
            </div> <!-- end container -->
        </div>
        <!-- end wrapper -->

   <!-- Footer -->
   <%- include('partials/_footer')%>
   <!-- End Footer -->

    <script src="/plugins/bootstrap-colorpicker/js/bootstrap-colorpicker.min.js"></script>
    <script src="/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
    <script src="/plugins/bootstrap-maxlength/bootstrap-maxlength.min.js"></script>


    <!-- Plugins Init js -->
    <script src="/pages/form-advanced.js"></script> 

    <!-- Parsley js -->
    <script type="text/javascript" src="/plugins/parsleyjs/parsley.min.js"></script>
    <!-- Bootstrap inputmask js -->
    <script src="/plugins/bootstrap-inputmask/bootstrap-inputmask.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function() {
            $('form').parsley();
        });

    </script>

    <script>
    function Yonlendir(ID, adres, saniye) {
        if (saniye == 0) {
            window.location.href = adres;
        return;
        }
        document.getElementById(ID).innerHTML = saniye + " saniye sonra yönlendiriliyorsunuz.";
        saniye--;
        setTimeout(function() {
            Yonlendir(ID, adres, saniye);
        }, 1000);
    }
    </script>
    <script>
        Yonlendir("uyari", "/", 10);
    </script>
       
    </body>
</html>







