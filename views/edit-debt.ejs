<%- include('partials/_header') %>

    
    </head>

    <body>

        <!-- Navigation Bar-->
        <%- include('partials/_navigation')%>


        <div class="wrapper">
            <div class="container-fluid">

                <!-- Page-Title -->
                <div class="row">
                    <div class="col-sm-12">
                        <div class="page-title-box">
                            <div class="btn-group pull-right">
                                <ol class="breadcrumb hide-phone p-0 m-0">
                                    <li class="breadcrumb-item"><a href="#">Panel</a></li>
                                    <li class="breadcrumb-item"><a href="#">Sayfalar</a></li>
                                    <li class="breadcrumb-item active">Borç Düzenle</li>
                                </ol>
                            </div>
                            <h4 class="page-title">Borç Düzenle </h4>
                        </div>
                    </div>
                </div>
                <!-- end page title end breadcrumb -->
              

                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="mt-0 header-title">Borç Düzenle</h4>
                                <form method="post" action="/kisiler/<%= debt._id %>?_method=PUT">
                                    <div class="row">
                                        <div class="col-md-4">
                                        
                                            <div class="p-20">
                                                <div class="col-sm-12">
                                                    <div class="col-md-10">
                                                        <h4 class="mt-4 header-title">İLAÇ</h4>
                                                        <p class="text-muted  font-14">İlaç adını aşağıdan seçiniz, aradığınız ilaç sistemde yoksa ilaç ekle butonuna tıklayarak ilacı ekleyiniz.</p>
                                                        
                                                        <select name="medicine" class="form-control">
                                                            <% for(let i = 0; i < debt.medicine.length; i++) { %>    
                                                                <option value="<%= debt.medicine[i]._id %>"><%= debt.medicine[i].name %> - Seçili</option>
                                                            <% } %>
                                                            <% for(let i = 0; i < medicine.length; i++) { %>
                                                                <option value="<%= medicine[i]._id %>"><%= medicine[i].name %></option>
                                                            <% } %>
                                                        </select>
                                                        <img src="/images/small/img-2.jpg" width="420" class="img-fluid mt-4" id="medicine_img" alt="Medicine">
                                                        <a class="btn btn-primary waves-effect waves-light mt-4" href="/ilaclar/ilac-ekle" role="button">İlaç Ekle</a>
                                                    </div>
                                                
                                                    
                                                </div>  
                                            </div>
                                        </div> <!-- end col -->

                                        <div class="col-md-8">
                                            <div class="p-20">

                                                <div class="btn-group pull-right">
                                                    <a target="_blank" href="/yazdir">
                                                        <button type="button" class="btn btn-primary"><i class="mdi mdi-printer"></i> Yazdır</button>
                                                    </a>
                                                </div>

                                                <h4 class="mt-0 header-title">Kişi Bilgileri</h4>
                                                <p class="text-muted mb-4 font-14">Lütfen kişi bilgilerini eksiksiz doldurunuz.</p>

                                                    <div class="form-group mb-3">
                                                        <label>Borç Durumu</label>
                                                        <select name="status" class="form-control">
                                                            <option value="<%= debt.status%>"><%= debt.status%> - Seçili</option>
                                                            <option value="Ödendi">Ödendi</option>
                                                            <option value="Ödenmedi">Ödenmedi</option>
                                                        </select>
                                                    </div>

                                                    <div class="form-group mb-0">
                                                        <label>T.C Kimlik No</label>
                                                        <input type="text" name="tc" value="<%= debt.tc%>" data-mask="99999999999"  class="form-control">
                                                    </div>
                
                                                    <div class="form-group mb-0">
                                                        <label class="my-2 py-1">İsim Soyisim</label>
                                                        <div>
                                                            <input type="text" value="<%= debt.name %>" name="name" class="form-control" />
                                                        </div>
                                                    </div>
                
                                                    <div class="form-group mb-0">
                                                        <label class="my-2 py-1">Borç</label>
                                                        <div>
                                                            <input autofocus type="number" value="<%= debt.debt %>"  name="debt" class="form-control" />
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="my-2 py-1">Not</label>
                                                        <div>
                                                            <textarea id="textarea" name="note" value="<%= debt.note %>" class="form-control" maxlength="225" rows="3"><%= debt.note %></textarea>
                                                        </div>
                                                    </div>
                                                    <div class="form-group mt-5 mb-0">
                                                        <div>
                                                            <button type="submit" class="btn btn-primary waves-effect waves-light">
                                                                Gönder
                                                            </button>
                                                            <button type="reset" class="btn btn-secondary waves-effect m-l-5">
                                                                İptal
                                                            </button>
                                                        </div>
                                                    </div>
                                            
                                            </div>
                                        </div> <!-- end col -->
                                        
                                    </div> <!-- end row -->
                                 </form>
                            </div>
                        </div>
                    </div> <!-- end col -->
                </div> <!-- end row -->                            
            </div> <!-- end container -->
        </div>
        <!-- end wrapper -->

   <!-- Footer -->
   <%- include('partials/_footer')%>
   <!-- End Footer -->

    <script src="/plugins/bootstrap-colorpicker/js/bootstrap-colorpicker.min.js"></script>
    <script src="/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
    <script src="/plugins/bootstrap-maxlength/bootstrap-maxlength.min.js"></script>


    <!-- Plugins Init js -->
    <script src="/pages/form-advanced.js"></script> 

    <!-- Parsley js -->
    <script type="text/javascript" src="/plugins/parsleyjs/parsley.min.js"></script>
    <!-- Bootstrap inputmask js -->
    <script src="/plugins/bootstrap-inputmask/bootstrap-inputmask.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function() {
            $('form').parsley();
        });

    </script>
       
    </body>
</html>







