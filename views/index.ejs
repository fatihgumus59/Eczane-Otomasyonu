<%- include('partials/_header') %>

    </head>

    <body>

        <!-- Navigation Bar-->
        <%- include('partials/_navigation')%>
        <!-- End Navigation Bar-->

        <div class="wrapper">
            <div class="container-fluid">

                <!-- Page-Title -->
                <div class="row">
                    <div class="col-sm-12">
                        <div class="page-title-box">
                            <div class="btn-group pull-right">
                                <ol class="breadcrumb hide-phone p-0 m-0">
                                    <li class="breadcrumb-item"><a href="#">Otomasyon</a></li>
                                    <li class="breadcrumb-item active">Panel</li>
                                </ol>
                            </div>
                            <h4 class="page-title">Panel</h4>
                        </div>
                    </div>
                </div>
                <!-- end page title end breadcrumb -->
                <div class="row">
                    <div class="col-xl-12">
                        <div class="row">
                            <div class="col-lg-3">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="d-flex flex-row">
                                            <div class="col-3 align-self-center">
                                                <div class="round">
                                                    <i class="mdi mdi-account-multiple"></i>
                                                </div>
                                            </div>
                                            <div class="col-9 align-self-center text-right">
                                                <div class="m-l-10">
                                                    <h5 class="mt-0"><%= odenmemis %></h5>
                                                    <p class="mb-0 text-muted">Borç Alan Kişi <span class="badge bg-soft-success"><i class="mdi mdi-arrow-up"></i>7.35%</span></p>
                                                </div>
                                            </div>                                                                                          
                                        </div>
                                        <div class="progress mt-3" style="height:3px;">
                                            <div class="progress-bar  bg-danger" role="progressbar" style="width: <%= odenmemisOran %>%;" aria-valuenow="<%= odenmemisOran %>" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                    </div><!--end card-body-->
                                </div><!--end card-->
                            </div><!--end col-->

                            <div class="col-lg-3">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="d-flex flex-row">
                                            <div class="col-3 align-self-center">
                                                <div class="round">
                                                    <i class="mdi mdi-account-multiple-plus"></i>
                                                </div>
                                            </div>
                                            <div class="col-9 text-right align-self-center">
                                                <div class="m-l-10 ">
                                                    <h5 class="mt-0"><%= odenmis %></h5>
                                                    <p class="mb-0 text-muted">Borç Ödeyen Kişi</p>
                                                </div>
                                            </div>                                                                                                                
                                        </div>
                                        <div class="progress mt-3" style="height:3px;">
                                            <div class="progress-bar bg-success" role="progressbar" style="width: <%= odenmisOran %>%;" aria-valuenow="<%= odenmisOran %>" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                    </div><!--end card-body-->
                                </div><!--end card-->
                            </div><!--end col-->

                            <%if(debt){%>
                                <%if(debt[1] && debt[0]  ) {%>
                                    <div class="col-lg-3">
                                        <div class="card">
                                            <div class="card-body">
                                                <div class="search-type-arrow"></div>
                                                <div class="d-flex flex-row">
                                                    <div class="col-3 align-self-center">
                                                        <div class="round ">
                                                            <i class="mdi mdi-basket-unfill"></i>
                                                        </div>
                                                    </div>
                                                    <div class="col-9 align-self-center text-right">
                                                        <div class="m-l-10 ">
                                                            <h5 class="mt-0"><%=  debt[1]._id=='Ödenmedi' &&  debt[1].total || debt[0].total %> ₺</h5>
                                                            <p class="mb-0 text-muted">Ödenmemiş Borç </p>
                                                        </div>
                                                    </div>                                                                
                                                </div>
                                                <div class="progress mt-3" style="height:3px;">
                                                    <div class="progress-bar bg-danger" role="progressbar" style="width: <%=  
                                                    debt[1]._id=='Ödenmedi' &&  (Number(debt[1].total)*100) / (Number(debt[1].total)+Number(debt[0].total)) || 
                                                    (Number(debt[0].total)*100) / (Number(debt[0].total)+Number(debt[1].total)) 
                                                    
                                                    %>%;" aria-valuenow="
                                                    <%=  
                                                    debt[1]._id=='Ödenmedi' &&  (Number(debt[1].total)*100) / (Number(debt[1].total)+Number(debt[0].total)) || 
                                                    (Number(debt[0].total)*100) / (Number(debt[0].total)+Number(debt[1].total)) 
                                                    
                                                    %>
                                                    
                                                    " aria-valuemin="0" aria-valuemax="100"></div>
                                                </div>
                                            </div><!--end card-body-->
                                        </div><!--end card-->
                                    </div><!--end col-->
                                <%}else{%>
                                    <div class="col-lg-3">
                                        <div class="card">
                                            <div class="card-body">
                                                <div class="search-type-arrow"></div>
                                                <div class="d-flex flex-row">
                                                    <div class="col-3 align-self-center">
                                                        <div class="round ">
                                                            <i class="mdi mdi-basket-unfill"></i>
                                                        </div>
                                                    </div>
                                                    <div class="col-9 align-self-center text-right">
                                                        <div class="m-l-10 ">
                                                            <h5 class="mt-0">0 ₺</h5>
                                                            <p class="mb-0 text-muted">Ödenmemiş Borç </p>
                                                        </div>
                                                    </div>                                                                
                                                </div>
                                                <div class="progress mt-3" style="height:3px;">
                                                    <div class="progress-bar bg-danger" role="progressbar" style="width: 0%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                                                </div>
                                            </div><!--end card-body-->
                                        </div><!--end card-->
                                    </div><!--end col-->
                                <%}%>

                                <% if(debt[0] && debt[1] ){%>
                                    <div class="col-lg-3">
                                        <div class="card">
                                            <div class="card-body">
                                                <div class="search-type-arrow"></div>
                                                <div class="d-flex flex-row">
                                                    <div class="col-3 align-self-center">
                                                        <div class="round ">
                                                            <i class="mdi mdi-basket-fill"></i>
                                                        </div>
                                                    </div>
                                                    <div class="col-9 align-self-center text-right">
                                                        <div class="m-l-10 ">
                                                            <h5 class="mt-0"><%= debt[0]._id=='Ödendi' &&  debt[0].total || debt[1].total   %> ₺</h5>
                                                            <p class="mb-0 text-muted">Ödenmiş Borç </p>
                                                        </div>
                                                    </div>                                                                
                                                </div>
                                                <div class="progress mt-3" style="height:3px;">
                                                    <div class="progress-bar bg-success" role="progressbar" style="width: <%=  
                                                    debt[0]._id=='Ödendi' &&  (Number(debt[0].total)*100) / (Number(debt[0].total)+Number(debt[1].total)) || 
                                                    (Number(debt[1].total)*100) / (Number(debt[1].total)+Number(debt[0].total)) 
                                                    
                                                    %>%;" aria-valuenow="
                                                    <%=  
                                                    debt[0]._id=='Ödendi' &&  (Number(debt[0].total)*100) / (Number(debt[0].total)+Number(debt[1].total)) || 
                                                    (Number(debt[1].total)*100) / (Number(debt[1].total)+Number(debt[0].total)) 
                                                    
                                                    %>
                                                    
                                                    " aria-valuemin="0" aria-valuemax="100"></div>
                                                </div>
                                            </div><!--end card-body-->
                                        </div><!--end card-->
                                    </div><!--end col-->  
                                <%}else{%>
                                    <div class="col-lg-3">
                                        <div class="card">
                                            <div class="card-body">
                                                <div class="search-type-arrow"></div>
                                                <div class="d-flex flex-row">
                                                    <div class="col-3 align-self-center">
                                                        <div class="round ">
                                                            <i class="mdi mdi-basket-fill"></i>
                                                        </div>
                                                    </div>
                                                    <div class="col-9 align-self-center text-right">
                                                        <div class="m-l-10 ">
                                                            <h5 class="mt-0"><%= debt[0]._id=='Ödendi' &&  debt[0].total || debt[1].total   %>₺</h5>
                                                            <p class="mb-0 text-muted">Ödenmiş Borç </p>
                                                        </div>
                                                    </div>                                                                
                                                </div>
                                                <div class="progress mt-3" style="height:3px;">
                                                    <div class="progress-bar bg-success" role="progressbar" style="width: 100%;" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                                                </div>
                                            </div><!--end card-body-->
                                        </div><!--end card-->
                                    </div><!--end col-->
                                <%}%>
                                
                            <%}else{%>
                                <div class="col-lg-3">
                                    <div class="card">
                                        <div class="card-body">
                                            <div class="search-type-arrow"></div>
                                            <div class="d-flex flex-row">
                                                <div class="col-3 align-self-center">
                                                    <div class="round ">
                                                        <i class="mdi mdi-basket-unfill"></i>
                                                    </div>
                                                </div>
                                                <div class="col-9 align-self-center text-right">
                                                    <div class="m-l-10 ">
                                                        <h5 class="mt-0">0 ₺</h5>
                                                        <p class="mb-0 text-muted">Ödenmemiş Borç </p>
                                                    </div>
                                                </div>                                                                
                                            </div>
                                            <div class="progress mt-3" style="height:3px;">
                                                <div class="progress-bar bg-danger" role="progressbar" style="width: 0;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                        </div><!--end card-body-->
                                    </div><!--end card-->
                                </div><!--end col-->
    
                                <div class="col-lg-3">
                                    <div class="card">
                                        <div class="card-body">
                                            <div class="search-type-arrow"></div>
                                            <div class="d-flex flex-row">
                                                <div class="col-3 align-self-center">
                                                    <div class="round ">
                                                        <i class="mdi mdi-basket-fill"></i>
                                                    </div>
                                                </div>
                                                <div class="col-9 align-self-center text-right">
                                                    <div class="m-l-10 ">
                                                        <h5 class="mt-0">0 ₺</h5>
                                                        <p class="mb-0 text-muted">Ödenmiş Borç </p>
                                                    </div>
                                                </div>                                                                
                                            </div>
                                            <div class="progress mt-3" style="height:3px;">
                                                <div class="progress-bar bg-success" role="progressbar" style="width: 0;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                        </div><!--end card-body-->
                                    </div><!--end card-->
                                </div><!--end col-->
                            <%}%>
                        </div><!--end row-->
                    </div><!--end col-->                  
                </div> <!-- end row --> 

                
                <div class="row">

                    <%if(debt){%>
                        <div class="col-xl-6">
                            <div class="card">
                                <div class="card-body new-user">
                                    <h5 class="header-title mb-4 mt-0">Borç Listesi (Son Eklenen)</h5>
                                    <div class="table-responsive">
                                        <table class="table table-hover mb-0">
                                            <thead>
                                                <tr>
                                                    <th class="border-top-0">T.C</th>
                                                    <th class="border-top-0">Kişi</th>                               
                                                    <th class="border-top-0">Borç</th>
                                                    <th class="border-top-0">İşlem</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                            <%for(let i =0; i< list.length; i++) {%>
                                                <tr>
                                                    <td>
                                                        <a><%= list[i].tc %></a>
                                                    </td>
                                                    <td>                                                                
                                                        <a><%= list[i].name%></a>
                                                    </td>                           
                                                    <td>
                                                        <a><%= list[i].total %><span>₺</span></a>
                                                    </td>
                                                    <td>
                                                        <a target="_blank" href="/kisiler/edit/<%= list[i]._id%>">
                                                            <button type="button" class="btn btn-lg btn-primary btn-sm "><i class="fas fa-user-edit"></i></button>
                                                        </a> 
                                                        <a target="_blank" href="/yazdir/<%= list[i]._id%>">
                                                            <button type="button" class="btn btn-secondary btn-sm"><i class="mdi mdi-printer"></i></button>
                                                        </a>
                                                    </td>
                                                </tr>
                                            <%}%>
                                            </tbody>
                                        </table>                                                
                                    </div>
                                </div><!--end card-body-->
                            </div><!--end card-->
                        </div><!--end col-->
                    <%}%>
                
                    <div class="col-xl-6">
                            <div class="card">
                                <div class="card-body new-user">
                                    <h5 class="header-title mb-4 mt-0">Notlar (Son Eklenen)</h5>
                                    


                                        <div class="row">

                                            <%for(let i=0; i< notlar.length; i++) {%>

                                                <div class="col-lg-6">
                                                    <div class="card">
                                                        <h6 class="card-header mt-0">TC: <%= notlar[i].tc %></h6>
                                                        <div class="card-body">
                                                            <h4 class="card-title font-20 mt-0"><%= notlar[i].name %></h4>
                                                            <p class="card-text"><%=notlar[i].note %></p>
                                                            <a href="/kisiler/edit/<%= notlar[i]._id%>" style="display:inline;" class="btn btn-primary">Kişiye Git</a>
                                                        </div>
                                                    </div>
                                                </div>
    
                                            <% }%>
                        
                                        </div>

                                        
                                                                    
                                    
                                </div><!--end card-body-->
                            </div><!--end card-->
    
                    </div> <!--end row--> 

                </div> <!--end row--> 
                
                
            </div> <!-- end container -->
        </div>
        <!-- end wrapper -->


        <!-- Footer -->
        <%- include('partials/_footer')%>
        <!-- End Footer -->
        

        <script src="/plugins/jvectormap/jquery-jvectormap-2.0.2.min.js"></script>
        <script src="/plugins/jvectormap/jquery-jvectormap-world-mill-en.js"></script>
        
        <script src="/plugins/skycons/skycons.min.js"></script>
       
        <script src="/plugins/raphael/raphael-min.js"></script>
        <script src="/plugins/morris/morris.min.js"></script> 
         

    </body>
</html>